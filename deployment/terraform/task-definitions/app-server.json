[
  {
        "cpu": 10,
        "essential": true,
        "image": "${nginx_image_url}",
        "links": [
            "api-server:api-server"
        ],
        "memory": 512,
        "name": "nginx",
        "portMappings": [
            {
                "containerPort": 443,
                "hostPort": 0
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}PotsdamDemo",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "nginx"
            }
        }
    },
    {
        "name": "api-server",
        "image": "${api_server_image_url}",
        "cpu": 1024,
        "memoryReservation": 2048,
        "essential": true,
        "command": [
            "-Xmx1536m",
            "-jar",
            "rv-server.jar"
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}PotsdamDemo",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "api-server"
            }
        }
    }
]
